{
  "name": "@prb/foundry-template",
  "description": "Foundry-based template for developing Solidity smart contracts",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/PaulRBerg"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "solhint-community": "^3.6.0"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "forge": "forge",
    "build": "forge build",
    "clean": "forge clean",
    "lint": "pnpm lint:sol && pnpm prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "yarn forge test -vvv --fork-url https://eth-mainnet.g.alchemy.com/v2/CNwdLFVp-NzJkuEQ--I6_8HtSztAwCd6 --fork-block-number 17487000"
  }
}
